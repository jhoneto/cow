

<%= f.hidden_field :account_id, :value => current_user.account_id%>
<div class="row">
  <div class="span2">
    <label>Data</label>
    <%= f.text_field :date_str, :class => 'datepicker span2'%>
  </div>
  <div class="span6">
    <label>Paciente</label>
    <%= f.autocomplete_field :patient_name, autocomplete_patient_name_patients_path, :id_element => '#estimate_patient_id', :class => 'span6'%>
    <%= f.hidden_field :patient_id%>
  </div>      
</div>
<br>
<%= render :partial => "form_procedure", :locals => {:f => f} %>

<h5>Totais</h5>
<div class="row">
  <div class="span2">
    <label>Total</label>
    <%= f.text_field :total, :class => 'span2 valor_monetario', :readonly => true%>
  </div>
  <div class="span2">
    <label>Desconto</label>
    <%= f.text_field :discount, :class => 'span2 valor_monetario', :onchange => "totalizar()"%>
  </div>
  <div class="span2">
    <label>Valor Final</label>
    <%= f.text_field :final_value, :class => 'span2 valor_monetario', :readonly => true%>
  </div>

</div>
<br>

<%= render :partial => "form_payment", :locals => {:f => f} %>

