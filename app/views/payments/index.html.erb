<ul class="nav nav-tabs"> 
	<li class="active"><%= link_to "#{t("bootstrap-rails.list", :default => "List")}", payments_path  %></li>  
	<li><%= link_to "#{t("bootstrap-rails.new", :default => "New")}", new_payment_path %></li>
</ul>   
<h2 class="title"><%= t("bootstrap-rails.all", :default => "All")  %> <%= t("activerecord.models.payments") %> </h2>
<table class="table table-striped table-bordered">
    <thead>             
      <th>#</th>   
            <th><%= t("activerecord.attributes.payment.account_id", :default => "Account_id") %></th>
            <th><%= t("bootstrap-rails.created_at", :default => "Created at")  %></th>
      <th class="last">&nbsp;</th>
    </thead>                         
    <tbody>
      	<% @payments.each do |payment| -%>
        <tr>
          <td><%= payment.id %></td>
                    <td><%= link_to payment.account_id, payment_path(payment) %></td>
                    <td><%= payment.created_at %></td>
          <td>
            <%= link_to "#{t("bootstrap-rails.show", :default => "Show")}", payment_path(payment) %> |
            <%= link_to "#{t("bootstrap-rails.edit", :default => "Edit")}", edit_payment_path(payment) %> |
            <%= link_to "#{t("bootstrap-rails.delete", :default => "Delete")}", payment_path(payment), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>
        <% end -%>
    </tbody>
</table>
             



<% content_for :sidebar, render(:partial => 'sidebar') -%>
