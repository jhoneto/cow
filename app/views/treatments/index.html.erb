<ul class="nav nav-tabs"> 
	<li class="active"><%= link_to "#{t("bootstrap-rails.list", :default => "List")}", treatments_path  %></li>  
	<li><%= link_to "#{t("bootstrap-rails.new", :default => "New")}", new_treatment_path %></li>
</ul>   
<h2 class="title"><%= t("bootstrap-rails.all", :default => "All")  %> <%= t("activerecord.models.treatments") %> </h2>
<table class="table table-striped table-bordered">
    <thead>             
      <th>#</th>   
            <th><%= t("activerecord.attributes.treatment.account_id", :default => "Account_id") %></th>
            <th><%= t("bootstrap-rails.created_at", :default => "Created at")  %></th>
      <th class="last">&nbsp;</th>
    </thead>                         
    <tbody>
      	<% @treatments.each do |treatment| -%>
        <tr>
          <td><%= treatment.id %></td>
                    <td><%= link_to treatment.account_id, treatment_path(treatment) %></td>
                    <td><%= treatment.created_at %></td>
          <td>
            <%= link_to "#{t("bootstrap-rails.show", :default => "Show")}", treatment_path(treatment) %> |
            <%= link_to "#{t("bootstrap-rails.edit", :default => "Edit")}", edit_treatment_path(treatment) %> |
            <%= link_to "#{t("bootstrap-rails.delete", :default => "Delete")}", treatment_path(treatment), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>
        <% end -%>
    </tbody>
</table>
             

<%= will_paginate @treatments  %>



<% content_for :sidebar, render(:partial => 'sidebar') -%>
