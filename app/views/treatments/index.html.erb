<ul class="nav nav-tabs"> 
	<li class="active"><%= link_to "#{t("bootstrap-rails.list", :default => "List")}", patient_treatments_path  %></li>
</ul>
<h2 class="title"><%= t("bootstrap-rails.all", :default => "All")  %> <%= t("activerecord.models.treatments") %> </h2>
<table class="table table-striped table-bordered">
	<thead>             
		<th>#</th>   
		<th>Data</th>
		<th>Dentista</th>
		<th class="last">&nbsp;</th>
	</thead>                         
	<tbody>
		<% @treatments.each do |treatment| -%>
		<tr>
			<td><%= treatment.id %></td>
			<td><%= link_to treatment.date, patient_treatment_path(treatment, @patient) %></td>
			<td><%= treatment.dentist.name %></td>
			<td>
				<%= link_to "#{t("bootstrap-rails.show", :default => "Show")}", patient_treatment_path(treatment, @patient) %> |
				<%= link_to "#{t("bootstrap-rails.edit", :default => "Edit")}", edit_patient_treatment_path(treatment, @patient) %> |
				<%= link_to "#{t("bootstrap-rails.delete", :default => "Delete")}", patient_treatment_path(treatment, @patient), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
			</td>
		</tr>
		<% end -%>
	</tbody>
</table>






<% content_for :sidebar, render(:partial => 'sidebar') -%>
